<h1>Listing tags</h1>

<table>
  <tr>
    <th>Tag name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= link_to tag.name, images_path(:tag => tag.name) %></td>
    <td><%= tag.images.size %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

